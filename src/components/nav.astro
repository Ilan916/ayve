              <div class="py-6">
                <a href="#contact-form" class="bg-[#1e274a] hover:bg-[#5974be] text-white block px-3 py-2 rounded-md text-base font-medium font-satoshi mt-2 scroll-to-contact">Prendre RDV</a>
</nav>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('a.scroll-to-contact').forEach(function(link) {
      link.addEventListener('click', function(e) {
        const target = document.getElementById('contact-form');
        if (target) {
          e.preventDefault();
          // Si le menu mobile est ouvert, on le ferme avant de scroller
          const dialog = document.getElementById('mobile-menu');
          if (dialog && (dialog instanceof HTMLDialogElement) && dialog.open) dialog.close();
          setTimeout(() => {
            target.scrollIntoView({ behavior: 'smooth' });
          }, 200);
        }
      });
    });
  });
</script>
              </div>
            </div>
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>
</header>

<script is:inline>
  // Burger menu mobile natif
  const openBtn = document.getElementById('open-mobile-menu');
  const closeBtn = document.getElementById('close-mobile-menu');
  const dialog = document.getElementById('mobile-menu');
  if (openBtn && dialog) {
    openBtn.addEventListener('click', () => {
      dialog.showModal();
    });
  }
  if (closeBtn && dialog) {
    closeBtn.addEventListener('click', () => {
      dialog.close();
    });
  }
</script>
